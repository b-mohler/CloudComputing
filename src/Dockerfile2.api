# Dockerfile.api

FROM python:3.9-slim

WORKDIR /app2

# Copy requirements.txt from the build context root into the working directory in the container
COPY requirements.txt /app2/requirements.txt
RUN pip install -r /app2/requirements.txt

# Copy app2.py from the src directory into the working directory in the container
COPY app2.py /app2/app2.py

EXPOSE 5000
CMD ["python", "app2.py"]
